<div class="wrapper-nav">
  <div class="logo">
  <%= link_to image_tag("logo.png"), root_path %>
   </div>
  <div class="login">
  <% if user_signed_in? %>
  <div class="dropdown menu-icon avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <span class="menu-icon__line"></span>
    </div>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to "Create Event", new_event_path%></li>
            <li> <%= link_to "Dashboard",  user_dashboards_path(current_user)%></li>
            <li><%= link_to user_path(current_user) do %>
                <%= t(".profile", default: "Profile") %>
                <% end %></li>
            <li><%= link_to destroy_user_session_path, method: :delete do %>
               <%= t(".sign_out", default: "Log out") %>
                <% end %></li>
            
        </ul>
      </div>
    
  <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login | Sign Up"), new_user_session_path %>
    <% end %>
  </div>
</div>




