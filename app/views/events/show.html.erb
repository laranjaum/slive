<div class="container">
  <div class="row page-title"><h2> / <%=@event.name%></h2> <br>
  <p>add slides to your event</p>
  </div>
     <div class="row page-subtitle-flex">
        <div>
          <%= link_to "participants", event_participants_path(@event) , class: "participants-subtitle" %>
        </div>
        <div class="surveys-subtitle">surveys</div>
        <div class="votes-subtitle">votes</div>
     </div>

</div>


<div class="container">
  <div class="row event-upload-slides">
   <% if @event.presentation == nil && current_user == @event.presenter %>
      <%= link_to "Click here to add slides.", new_event_presentation_path(@event) %>
  <% elsif current_user == @event.presenter %>
      <%= link_to "", event_presentation_path(@event, @event.presentation), method: :delete %>
      <%= link_to "", new_event_presentation_path(@event) %>
  <% end %>
    <span><i class="fa fa-dot-circle-o" aria-hidden="true"></i><%= link_to "  Go to live page" %></span>
  </div>

</div>

<div class="container">
  <div class="row event-description">
    <%= @event.description %>
  </div>
</div>

<div class="container">
  <div class="row event-address">
    <%= image_tag("map.png", height: '20', width: '20')%>  <%= @event.address %>
    </div>
    <div class="row event-address">
      <%= image_tag("address.png", height: '20', width: '20') %> <%= @event.date %>
      </div>
      <div class="row event-address"><i class="fa fa-id-badge" aria-hidden="true"></i> <%= @event.token %></div>
  </div>

<div class="container">
  <div class="row page-title"><h2>/ Triggers</h2></div>
  <div class="row page-subtitle-flex"><p> Slides are index based, you can trigger specific actions based on their number</p>
  </div>
</div>


