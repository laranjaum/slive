
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for @user, url: user_path, method: :put do |f|  %>
      <%= f.input :full_name %>
      <%= f.input :birth_date%>
      <%= f.input :occupation %>
      <%= f.input :phone_number %>
      <%= f.input :avatar %>
      <%= f.input :avatar_cache, as: :hidden %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
     </div>
  </div>
</div>
